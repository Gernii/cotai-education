{
  "name": "backend-aws",
  "version": "0.0.1",
  "description": "CoTAI Education Backend",
  "main": "serverless.ts",
  "scripts": {
    "dev": "serverless offline start --stage dev-local --reloadHandler",
    "deploy": "npm run predeploy && serverless deploy --stage dev",
    "predeploy": "run-s \"predeploy.*\"",
    "predeploy.empty": "",
    "---------FMT CHECK-----------": "Fmt check vaid code only",
    "fmt.check": "run-s \"fmt.check.*\"",
    "fmt.check.src": "biome format ./src",
    "fmt.check.resources": "biome format ./resources",
    "fmt.check.config": "biome format ./serverless.ts",
    "---------FMT FIX-----------": "Fmt check and fix vaid code",
    "fmt.fix": "run-s \"fmt.fix.*\"",
    "fmt.fix.src": "biome format --write ./src",
    "fmt.fix.resources": "biome format --write ./resources",
    "fmt.fix.config": "biome format --write ./serverless.ts",
    "---------LINT CHECK-----------": "Lint check vaid code only",
    "lint.check": "run-s \"lint.check.*\"",
    "lint.check.src": "biome check ./src",
    "lint.check.resources": "biome check ./resources",
    "lint.check.config": "biome check ./serverless.ts",
    "---------LINT FIX-----------": "Lint check and fix vaid code",
    "lint.fix": "run-s \"lint.fix.*\"",
    "lint.fix.src": "biome check --write --unsafe ./src",
    "lint.fix.resources": "biome check --write --unsafe ./resources",
    "lint.fix.config": "biome check --write --unsafe ./serverless.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@serverless/typescript": "^3.38.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.7",
    "serverless-bundle": "^6.1.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-dynamodb": "^0.2.47",
    "serverless-offline": "^13.3.2",
    "serverless-prune-plugin": "^2.0.2",
    "serverless-stack-output": "^0.2.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@middy/core": "^5.2.1",
    "@middy/http-error-handler": "^5.2.3",
    "@middy/http-event-normalizer": "^5.2.3",
    "@middy/http-json-body-parser": "^5.2.3",
    "@middy/util": "^5.2.1",
    "@repo/types-bridge": "*",
    "aws-jwt-verify": "^4.0.0",
    "dynamodb-toolbox": "^0.9.2",
    "yup": "^1.3.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ],
    "resources/**/*.ts": [
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ],
    "serverless.ts": [
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
