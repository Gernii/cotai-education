{
  "name": "backend-aws",
  "version": "0.0.1",
  "description": "CoTAI Education Backend",
  "main": "serverless.ts",
  "scripts": {
    "deploy": "serverless deploy --stage dev",
    "fmt": "run-s \"fmt.*\"",
		"fmt.write": "prettier --write \"src/**/*.{ts*,svelte}\"",
		"fmt.check": "prettier --check \"src/**/*.{ts*,svelte}\"",
		"lint": "run-s \"lint.*\"",
		"lint.fix": "eslint \"src/**/*.{ts*,svelte}\" --fix",
		"lint.check": "eslint  \"src/**/*.{ts*,svelte}\"  --max-warnings=0"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@serverless/typescript": "^3.38.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.7",
    "dotenv": "^16.3.1",
    "serverless-bundle": "^6.1.0"
  },
  "dependencies": {
    "@middy/core": "^5.2.1",
    "@middy/http-json-body-parser": "^5.2.1",
    "@middy/util": "^5.2.1",
    "json-schema-to-ts": "^3.0.0"
  },
  "lint-staged": {
		"**/src/**/*.ts": [
			"eslint --fix",
			"eslint --max-warnings=0",
			"prettier --write",
			"prettier --check"
		]
	}
}