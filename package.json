{
  "name": "cotai-education",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "validate": "run-s \"validate.*\"",
    "validate.lint": "turbo run lint --parallel",
    "validate.fmt": "turbo run fmt --parallel",
    "dev": "turbo run dev",
    "lint": "turbo run lint --parallel",
    "test": "turbo run test --parallel",
    "fmt": "turbo run fmt --parallel",
    "check": "turbo run check --parallel",
    "deploy": "turbo run deploy --parallel",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
