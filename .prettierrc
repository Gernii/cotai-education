{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["@trivago/prettier-plugin-sort-imports","prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^\\$app/(.*)$",
		"^\\$env/(.*)$",
		"^\\$lib/(.*)$",
		"^\\$i18n/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"tailwindFunctions": ["twMerge", "cva", "cx"]
}
