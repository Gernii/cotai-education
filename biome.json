{
    "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,

        "rules": {
            "all": true,
            "suspicious": {
                "noShadowRestrictedNames": "off"
            },
            "style": {
                "noNamespaceImport": "off",
                "useNamingConvention": "off"
            },
            "correctness": {
                "noUndeclaredVariables": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf"
    },

    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    },

    "files": {
        "ignore": [
            "node_modules",
            "*.*js*",
            "markdown-it-imsize",
            "*.svelte",
            "admin",
            "types-bridge"
        ]
    },
    "overrides": [
        {
            "include": ["index.ts"],
            "linter": {
                "rules": {
                    "performance": {
                        "noBarrelFile": "off",
                        "noReExportAll": "off"
                    }
                }
            }
        },
        {
            "include": ["*.d.ts"],
            "linter": {
                "rules": {
                    "recommended": true,
                    "all": false,
                    "correctness": {
                        "noUndeclaredVariables": "off"
                    },
                    "style": {
                        "noDefaultExport": "off",
                        "noNamespace": "off"
                    }
                }
            }
        },
        {
            "include": ["*.nocheck.ts"],
            "linter": {
                "enabled": false
            }
        }
    ]
}
