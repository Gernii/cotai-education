{
  "compilerOptions": {
      "lib": ["ESNext"],
      "moduleResolution": "bundler",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2020",
      "outDir": "lib",
      "allowJs": true,
      "strictNullChecks": true,
      "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
